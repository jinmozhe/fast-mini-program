# API配置
API_V1_STR=/api/v1
PROJECT_NAME=外卖配送平台API
BACKEND_CORS_ORIGINS=["http://localhost", "http://localhost:4200", "http://localhost:3000"]
ENVIRONMENT=development

# JWT配置
SECRET_KEY=请替换为随机生成的安全密钥
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 数据库配置
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=delivery_app
SQLALCHEMY_DATABASE_URI=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}/${POSTGRES_DB}

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 文件上传配置
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=5242880  # 5MB
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "pdf", "doc", "docx"]

# 短信服务配置
SMS_PROVIDER=mock  # mock, aliyun, tencent
SMS_ACCESS_KEY=
SMS_SECRET_KEY=
SMS_REGION=
SMS_SIGN_NAME=
SMS_TEMPLATE_CODE=

# 电子邮件配置
EMAILS_ENABLED=False
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=